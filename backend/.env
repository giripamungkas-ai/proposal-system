# Proposal System Backend Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proposal_system
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API Configuration
PORT=3001
NODE_ENV=development

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@mdmedia.co.id

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.gif,.pdf,.doc,.docx,.xls,.xlsx

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=logs

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=10
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Database SSL Configuration (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING=true

# Cache Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance"
